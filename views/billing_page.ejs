  <script>
    function calculateRow(row) {
      const qty = parseFloat(row.querySelector(".quantity").value) || 0;
      const price = parseFloat(row.querySelector(".price_per_unit").value) || 0;
      const discount = parseFloat(row.querySelector(".discount_percent").value) || 0;

      const amount = qty * price;
      const discountAmt = amount * (discount / 100);
      const total = amount - discountAmt;

      row.querySelector(".amount").value = amount.toFixed(2);
      row.querySelector(".discount_amount").value = discountAmt.toFixed(2);
      row.querySelector(".total_after_discount").value = total.toFixed(2);

      calculateGrandTotal();
    }

    function calculateGrandTotal() {
      let total = 0;
      let totalDiscount = 0;

      document.querySelectorAll(".item-row").forEach(row => {
        total += parseFloat(row.querySelector(".total_after_discount").value) || 0;
        totalDiscount += parseFloat(row.querySelector(".discount_amount").value) || 0;
      });

      document.getElementById("grandTotal").textContent = total.toFixed(2);
      document.getElementById("grandDiscount").textContent = totalDiscount.toFixed(2);
    }

    document.addEventListener("input", function (e) {
      if (
        e.target.classList.contains("quantity") ||
        e.target.classList.contains("price_per_unit") ||
        e.target.classList.contains("discount_percent")
      ) {
        calculateRow(e.target.closest(".item-row"));
      }
    });

    document.getElementById("addItem").addEventListener("click", function () {
      const container = document.getElementById("itemContainer");
      const newRow = container.querySelector(".item-row").cloneNode(true);

      newRow.querySelectorAll("input").forEach(input => {
        if (input.classList.contains("discount_percent")) {
          input.value = "0";
        } else {
          input.value = "";
        }
      });

      // Enable remove button for new row
      const removeBtn = newRow.querySelector(".remove-btn");
      removeBtn.disabled = false;
      removeBtn.addEventListener("click", function() {
        if (document.querySelectorAll(".item-row").length > 1) {
          newRow.remove();
          calculateGrandTotal();
        }
      });

      container.appendChild(newRow);
    });

    // Initialize first row
    document.addEventListener("DOMContentLoaded", function() {
      calculateGrandTotal();
    });
  </script>


